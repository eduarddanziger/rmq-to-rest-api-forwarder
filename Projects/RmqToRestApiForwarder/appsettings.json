{
    "RabbitMQ": {
        "HostName": "localhost",
        "UserName": "guest",
        "Password": "guest",
        "QueueName": "sdr_queue"
    },
    "ApiBaseUrl": {
        "GitHubCodespaceUrl": "https://probable-space-computing-machine-x5vwx5vxr959cvq6j-5027.app.github.dev/api/AudioDevices",
        "AzureUrl": "https://sdrepo-hjddbrc9b9gecddc.canadacentral-01.azurewebsites.net/api/AudioDevices",
        "LocalVmUrl": "http://w10x64w10:5027/api/AudioDevices"
    },
    "NLog": {
        "autoReload": true,
        "throwConfigExceptions": true,
        "extensions": [
            { "assembly": "NLog.Extensions.Logging" }
        ],
        "variables": {
            "logdir": "C:${dir-separator}ProgramData${dir-separator}${processname}",
            "logname": "${processname}"
        },
        "time": { "type": "AccurateLocal" },
        "default-wrapper": { "type": "AsyncWrapper", "overflowAction": "Block" },
        "targets": {
            "all-file": {
                "type": "File",
                "fileName": "${logdir}${dir-separator}${logname}-${shortdate}.log",
                "createDirs": true,
                "archiveEvery": "Day",
                "archiveNumbering": "Sequence",
                "archiveAboveSize": 5345280,
                "layout": "${date:format=yyyy-MM-dd HH\\:mm\\:ss.ffffff} ${level:uppercase=true:format=FirstCharacter} [${native-thread-id}] ${message}"
            },
            "own-console": {
                "type": "LimitingWrapper",
                "interval": "00:00:01",
                "messageLimit": 100,
                "target": {
                    "type": "ColoredConsole",
                    "layout": "${uppercase:${level}} ${message}",
                    "rowHighlightingRules": [
                        { "condition": "level == LogLevel.Error", "foregroundColor": "Red" },
                        { "condition": "level == LogLevel.Fatal", "foregroundColor": "Red", "backgroundColor": "White" }
                    ]
                }
            }
        },
        "rules": [
            {
                "logger": "Microsoft.*",
                "minLevel": "Information",
                "writeTo": "all-file"
            },
            {
                "logger": "*",
                "minLevel": "Trace",
                "writeTo": "all-file"
            },
            {
                "logger": "*",
                "minLevel": "Information",
                "writeTo": "own-console",
                "filterDefaultAction": "Log",
                "filters": {
                    "whenRepeated": {
                        "layout": "${message}",
                        "action": "Ignore"
                    }
                }
            }
        ]
    }
}
